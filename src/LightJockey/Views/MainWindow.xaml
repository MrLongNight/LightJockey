<Window x:Class="LightJockey.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:LightJockey.Views"
        mc:Ignorable="d"
        Title="LightJockey - Audio-Reactive Lighting Control" 
        Height="750" Width="1000"
        MinHeight="600" MinWidth="800">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="LightJockey" 
                       FontSize="28" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <Button Content="ðŸŒ“ Toggle Theme" 
                    HorizontalAlignment="Right"
                    Command="{Binding ToggleThemeCommand}"
                    Padding="10,5"/>
        </Grid>
        
        <!-- Audio Visualizer -->
        <GroupBox Grid.Row="1" Header="Audio Visualizer" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <views:AudioVisualizerControl Grid.Row="0"
                    SpectralData="{Binding SpectralData}"
                    IsBeatDetected="{Binding IsBeatDetected}"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="BPM: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding CurrentBpm, StringFormat='{}{0:F1}'}" 
                               VerticalAlignment="Center" 
                               FontWeight="Bold"
                               FontSize="16"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Column - Devices and Effects -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Audio Device Selection -->
                    <GroupBox Header="Audio Device" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <Label Content="Select Audio Device:"/>
                            <ComboBox ItemsSource="{Binding AudioDevices}"
                                     SelectedItem="{Binding SelectedAudioDevice}"
                                     DisplayMemberPath="Name"
                                     Margin="0,5,0,10"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Refresh Devices" 
                                       Command="{Binding RefreshAudioDevicesCommand}"
                                       Margin="0,0,5,0"/>
                                <Button Content="Start Capture" 
                                       Command="{Binding StartAudioCaptureCommand}"
                                       Margin="5,0"/>
                                <Button Content="Stop Capture" 
                                       Command="{Binding StopAudioCaptureCommand}"
                                       Margin="5,0,0,0"/>
                            </StackPanel>
                            
                            <TextBlock Text="{Binding IsAudioCapturing, StringFormat='Status: {0}'}" 
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"
                                      FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAudioCapturing}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Hue Device Selection -->
                    <GroupBox Header="Philips Hue" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <Label Content="Select Hue Bridge:"/>
                            <ComboBox ItemsSource="{Binding HueBridges}"
                                     SelectedItem="{Binding SelectedHueBridge}"
                                     DisplayMemberPath="IpAddress"
                                     Margin="0,5,0,10"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Discover Bridges" 
                                       Command="{Binding DiscoverHueBridgesCommand}"
                                       Margin="0,0,5,0"/>
                                <Button Content="Connect" 
                                       Command="{Binding ConnectToHueBridgeCommand}"
                                       Margin="5,0,0,0"/>
                            </StackPanel>
                            
                            <TextBlock Text="{Binding IsHueConnected, StringFormat='Connected: {0}'}" 
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"
                                      FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsHueConnected}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <Label Content="Lights Found:" Margin="0,10,0,5"/>
                            <TextBlock Text="{Binding HueLights.Count, StringFormat='{}{0} lights'}" 
                                      HorizontalAlignment="Center"
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Effect Selection -->
                    <GroupBox Header="Effect Selection" Padding="10">
                        <StackPanel>
                            <Label Content="Select Effect:"/>
                            <ComboBox ItemsSource="{Binding AvailableEffects}"
                                     SelectedItem="{Binding SelectedEffect}"
                                     Margin="0,5,0,10"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Start Effect" 
                                       Command="{Binding StartEffectCommand}"
                                       Margin="0,0,5,0"/>
                                <Button Content="Stop Effect" 
                                       Command="{Binding StopEffectCommand}"
                                       Margin="5,0,0,0"/>
                            </StackPanel>
                            
                            <TextBlock Text="{Binding IsEffectRunning, StringFormat='Running: {0}'}" 
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"
                                      FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEffectRunning}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Right Column - Effect Parameters -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <GroupBox Header="Effect Parameters" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <!-- Intensity Slider -->
                            <Label Content="{Binding Intensity, StringFormat='Intensity: {0:P0}'}"/>
                            <Slider Value="{Binding Intensity}" 
                                   Minimum="0" Maximum="1" 
                                   TickFrequency="0.1" 
                                   IsSnapToTickEnabled="True"
                                   Margin="0,5,0,15"/>
                            
                            <!-- Speed Slider -->
                            <Label Content="{Binding Speed, StringFormat='Speed: {0:F1}x'}"/>
                            <Slider Value="{Binding Speed}" 
                                   Minimum="0.1" Maximum="5" 
                                   TickFrequency="0.1" 
                                   IsSnapToTickEnabled="True"
                                   Margin="0,5,0,15"/>
                            
                            <!-- Brightness Slider -->
                            <Label Content="{Binding Brightness, StringFormat='Brightness: {0:P0}'}"/>
                            <Slider Value="{Binding Brightness}" 
                                   Minimum="0" Maximum="1" 
                                   TickFrequency="0.1" 
                                   IsSnapToTickEnabled="True"
                                   Margin="0,5,0,15"/>
                            
                            <!-- Audio Sensitivity Slider -->
                            <Label Content="{Binding AudioSensitivity, StringFormat='Audio Sensitivity: {0:P0}'}"/>
                            <Slider Value="{Binding AudioSensitivity}" 
                                   Minimum="0" Maximum="1" 
                                   TickFrequency="0.1" 
                                   IsSnapToTickEnabled="True"
                                   Margin="0,5,0,15"/>
                            
                            <!-- Checkboxes -->
                            <CheckBox Content="Audio Reactive" 
                                     IsChecked="{Binding AudioReactive}"
                                     Margin="0,5"/>
                            <CheckBox Content="Smooth Transitions" 
                                     IsChecked="{Binding SmoothTransitions}"
                                     Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{DynamicResource SecondaryBackground}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="10,5"
                Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="{DynamicResource SecondaryTextBrush}"/>
        </Border>
    </Grid>
</Window>
