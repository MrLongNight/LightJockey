<Window x:Class="LightJockey.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:LightJockey.Views"
        mc:Ignorable="d"
        Title="LightJockey - Audio-Reactive Lighting Control" 
        Height="750" Width="1000"
        MinHeight="600" MinWidth="800">
    
    <Window.Resources>
        <Style x:Key="StatusIndicatorStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="LightJockey" 
                       FontSize="28" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Settings"
                        Command="{Binding OpenSettingsCommand}"/>
                <Button Content="ðŸŒ“ Toggle Theme"
                        Command="{Binding ToggleThemeCommand}"
                        Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- Audio Visualizer -->
        <GroupBox Grid.Row="1" Header="Audio Visualizer" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <views:AudioVisualizerControl Grid.Row="0"
                    SpectralData="{Binding SpectralData}"
                    IsBeatDetected="{Binding IsBeatDetected}"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="BPM: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding CurrentBpm, StringFormat='{}{0:F1}'}" 
                               VerticalAlignment="Center" 
                               FontWeight="Bold"
                               FontSize="16"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Main Content Area -->
        <TabControl Grid.Row="2">
            <TabItem Header="Controls">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column - Devices and Effects -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Audio Device Selection -->
                            <GroupBox Header="Audio Device" DataContext="{Binding AudioControlViewModel}">
                                <StackPanel>
                                    <Label Content="Select Audio Device:"/>
                                    <ComboBox ItemsSource="{Binding AudioDevices}"
                                              SelectedItem="{Binding SelectedAudioDevice}"
                                              DisplayMemberPath="Name"/>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                        <Button Content="Refresh Devices"
                                                Command="{Binding RefreshAudioDevicesCommand}"/>
                                        <Button Content="Start Capture"
                                                Command="{Binding StartAudioCaptureCommand}"
                                                Margin="5,0"/>
                                        <Button Content="Stop Capture"
                                                Command="{Binding StopAudioCaptureCommand}"
                                                Margin="5,0"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding IsAudioCapturing, StringFormat='Status: {0}'}"
                                               Style="{StaticResource StatusIndicatorStyle}"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Hue Device Selection -->
                            <GroupBox Header="Philips Hue" Margin="0,10,0,0" DataContext="{Binding HueControlViewModel}">
                                <StackPanel>
                                    <Label Content="Select Hue Bridge:"/>
                                    <ComboBox ItemsSource="{Binding HueBridges}"
                                              SelectedItem="{Binding SelectedHueBridge}"
                                              DisplayMemberPath="IpAddress"/>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                        <Button Content="Discover Bridges"
                                                Command="{Binding DiscoverHueBridgesCommand}"/>
                                        <Button Content="Connect"
                                                Command="{Binding ConnectToHueBridgeCommand}"
                                                Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding IsHueConnected, StringFormat='Connected: {0}'}"
                                               Style="{StaticResource StatusIndicatorStyle}"/>

                                    <Label Content="Lights Found:" Margin="0,10,0,5"/>
                                    <TextBlock Text="{Binding HueLights.Count, StringFormat='{}{0} lights'}"
                                               HorizontalAlignment="Center"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Effect Selection -->
                            <GroupBox Header="Effect Selection" Margin="0,10,0,0" DataContext="{Binding EffectControlViewModel}">
                                <StackPanel>
                                    <Label Content="Select Effect:"/>
                                    <ComboBox ItemsSource="{Binding AvailableEffects}"
                                              SelectedItem="{Binding SelectedEffect}"/>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                        <Button Content="Start Effect"
                                                Command="{Binding StartEffectCommand}"/>
                                        <Button Content="Stop Effect"
                                                Command="{Binding StopEffectCommand}"
                                                Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding IsEffectRunning, StringFormat='Running: {0}'}"
                                               Style="{StaticResource StatusIndicatorStyle}"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Right Column - Effect Parameters -->
                    <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                        <StackPanel DataContext="{Binding EffectControlViewModel}">
                            <GroupBox Header="Effect Parameters">
                                <StackPanel>
                                    <views:ParameterSlider Label="{Binding Intensity, StringFormat='Intensity: {0:P0}'}" Value="{Binding Intensity}" />
                                    <views:ParameterSlider Label="{Binding Speed, StringFormat='Speed: {0:F1}x'}" Value="{Binding Speed}" Minimum="0.1" Maximum="5" TickFrequency="0.1" />
                                    <views:ParameterSlider Label="{Binding Brightness, StringFormat='Brightness: {0:P0}'}" Value="{Binding Brightness}" />
                                    <views:ParameterSlider Label="{Binding AudioSensitivity, StringFormat='Audio Sensitivity: {0:P0}'}" Value="{Binding AudioSensitivity}" />

                                    <Separator Margin="0,10"/>
                                    <Label Content="Color Variations" FontWeight="Bold" Margin="0,0,0,10"/>

                                    <views:ParameterSlider Label="{Binding HueVariation, StringFormat='Hue Variation: {0:P0}'}" Value="{Binding HueVariation}" ToolTipText="0% = single color, 100% = full spectrum" />
                                    <views:ParameterSlider Label="{Binding Saturation, StringFormat='Saturation: {0:P0}'}" Value="{Binding Saturation}" ToolTipText="0% = grayscale, 100% = fully saturated" />
                                    <views:ParameterSlider Label="{Binding ColorTemperature, StringFormat='Color Temperature: {0:P0}'}" Value="{Binding ColorTemperature}" ToolTipText="0% = warm (red/orange), 100% = cool (blue/cyan)" />

                                    <CheckBox Content="Audio Reactive" IsChecked="{Binding AudioReactive}" Margin="0,5"/>
                                    <CheckBox Content="Smooth Transitions" IsChecked="{Binding SmoothTransitions}" Margin="0,5"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Metrics">
                <views:MetricsView DataContext="{Binding MetricsViewModel}"/>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{DynamicResource SecondaryBackground}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="10,5"
                Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="{DynamicResource SecondaryTextBrush}"/>
        </Border>
    </Grid>
</Window>
