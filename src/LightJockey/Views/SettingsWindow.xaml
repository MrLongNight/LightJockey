<Window x:Class="LightJockey.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightJockey.Views"
        mc:Ignorable="d"
        Title="Settings" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Log Level"/>
            <ComboBox ItemsSource="{Binding LogLevels}" SelectedItem="{Binding SelectedLogLevel}"/>
            <Label Content="Retained Log Files"/>
            <TextBox Text="{Binding RetainedLogFileCount}"/>
            <Button Content="Save" Command="{Binding SaveCommand}" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
